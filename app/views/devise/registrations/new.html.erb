
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name),:html=>{:class=>"form-signin"}) do |f| %>
	<h1>Sign up</h1>
	<br/>
  <%= devise_error_messages! %>

  <div>
		<%= f.email_field :email, :autofocus => true,:placeholder=>"Email",:class=>"form-control" %></div>
  <div>
		<%= f.password_field :password,:placeholder=>"Password",:class=>"form-control" %></div>
		<div>
		<%= f.password_field :password_confirmation,:placeholder=>"Password Confirmation",:class=>"form-control" %></div>
	<br/>

<div><%= f.submit "Sign up",:class=>"btn btn-success btn-lg btn-block" %></div>
	<br/>
<%= render "devise/shared/links" %>
<% end %>

