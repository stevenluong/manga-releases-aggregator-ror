<!DOCTYPE html>
<html>
<head>
  <title>Slapps MRA</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Bootstrap -->
	<link href="<%=%>" rel="stylesheet" media="screen">
</head>
<body>
	<div class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
					<%= link_to "SLAPPS MRA",root_path, class:"navbar-brand"%>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
						<li <%if current_page? mangas_path%>class="active"<%end%>><%=link_to "Last Releases",mangas_path%></li>
						<li <%if current_page? subscriptions_path%>class="active"<%end%>><%=link_to user_signed_in? ? "Subscriptions":"Subscribe !",subscriptions_path%></li>
          </ul>
					<ul class="nav navbar-nav navbar-right">
						<%if !user_signed_in?%>
						<li><%= link_to 'Sign in', new_user_session_path %></li>
						<li><%= link_to "Sign up",new_user_registration_path%></li>
						<%else%>
						<li>Logged as <%=current_user.email%></li>
						<li><%=link_to "Sign Out",destroy_user_session_path,:method=>:delete%></li>
						<%end%>
					</ul>
        </div><!--/.nav-collapse -->
      </div>
		</div>
<div class="container">
	<%if notice%>
<div class="alert alert-info"><%= notice %></div>
		<%end%>
	<%if alert%>
<div class="alert alert-danger"><%= alert %></div>
		<%end%>
<%= yield %>
</div><!-- /.container -->
<script>
	$(".container").tooltip({
		selector:"[data-toggle=tooltip]",
		placement:"right"
	});
</script>
</body>
</html>
